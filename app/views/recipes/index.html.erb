<div class="row">
	<div class="col-md-5 col-md-offset-1">
		<h2>Recipes</h2>
	</div>

	<div class="col-md-2 col-md-offset-4">
		<%= link_to new_recipe_path, remote: true do %>
			<button class="btn btn-default">New</button>
		<% end %>	
	</div>
</div>

<div class="row">
	<div class="col-md-6 col-md-offset-2" id="recipe-form" style="display: none;"></div>
</div>

<% @recipes.each do |recipe| %>
	<div class="col-md-7 col-md-offset-1" id="recipes">
			<tr>
				<td><%= link_to recipe.title, recipe %></td>
				<td><%= recipe.description %></td>
			</tr>
	</div>
<% end %>
